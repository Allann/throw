<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Throw</PackageId>
    <Version>1.0.2</Version>
    <Authors>Amichai Mantinband</Authors>
    <PackageTags>argument,guard,clause,exception,contract,assert,assertions,validation</PackageTags>
    <Description>Fast, fluent, fully customizable and fun library for throwing exceptions.</Description>
    <PackageProjectUrl>https://github.com/mantinband/throw</PackageProjectUrl>
    <RepositoryType>git</RepositoryType>
    <PackageOutputPath>../nuget/</PackageOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2021.3.0" />
    <PackageReference Include="OneOf" Version="3.0.211" />
  </ItemGroup>

</Project>
